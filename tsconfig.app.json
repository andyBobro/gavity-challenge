{
  "baseUrl": ".",
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src", "src/**/*", "src/**/*.vue", "./vite.config.ts"],
  "exclude": ["src/**/__tests__/*", "node_modules", "dist"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["./src/api/*"],
      "@assets/*": ["./src/assets/*"],
      "@i18n/*": ["./src/i18n/*"],
      "@router/*": ["./src/router/*"],
      "@store/*": ["./src/store/*"],
      "@ui/*": ["./src/ui/*"],
      "@utils/*": ["./src/utils/*"]
    }
  }
}
